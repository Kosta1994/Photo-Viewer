{
  "name": "photo-viewer",
  "version": "0.0.4",
  "description": "An image/GIF viewer that can apply various resizing and color effects.",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run clean && webpack && cross-env DEVELOPMENT=true electron dist/main.js",
    "clean": "del-cli ./dist",
    "build": "npm run clean ./build && webpack && electron-builder -p never",
    "release": "npm run clean ./build && webpack && electron-builder -p always",
    "rebuild": "npm rebuild --runtime=electron --target=11.2.1 --disturl=https://atom.io/download/atom-shell --abi=67"
  },
  "keywords": [
    "photo",
    "viewer",
    "image",
    "photoshop",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tenpi/Photo-Viewer"
  },
  "build": {
    "appId": "com.tenpi.photo-viewer",
    "productName": "Photo Viewer",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Photo Viewer",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Photo-Viewer",
      "owner": "Tenpi",
      "releaseType": "draft"
    },
    "fileAssociations": [
      {
        "ext": "jpg",
        "description": "Image files"
      },
      {
        "ext": "jpeg",
        "description": "Image files"
      },
      {
        "ext": "png",
        "description": "Image files"
      },
      {
        "ext": "webp",
        "description": "Image files"
      },
      {
        "ext": "tiff",
        "description": "Image files"
      },
      {
        "ext": "gif",
        "description": "GIF files"
      }
    ]
  },
  "author": "Tenpi",
  "license": "MIT",
  "devDependencies": {
    "@tenpi/tslint": "^1.1.0",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/get-pixels": "^3.3.1",
    "@types/gif-encoder": "^0.7.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-image-crop": "^8.1.3",
    "@types/sharp": "^0.28.5",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.5",
    "node-loader": "^1.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "electron-shortcuts": "^0.4.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.5",
    "gif-encoder": "^0.7.2",
    "gif-frames": "github:benwiley4000/gif-frames",
    "image-pixels": "^2.2.2",
    "rc-slider": "^9.7.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-draggable": "^4.4.3",
    "react-image-crop": "^8.6.12",
    "sharp": "^0.28.3"
  }
}
